<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginEnd="24dp"
            android:elevation="5dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/img_view_playlist_head"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/fontbold"
                android:maxLines="1"
                android:textColor="@color/greyscale_900"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_year_of_release"
                app:layout_constraintEnd_toEndOf="@+id/card_img"
                app:layout_constraintStart_toStartOf="@+id/card_img"
                app:layout_constraintTop_toBottomOf="@+id/card_img"
                tools:text="THE SHADE" />

            <TextView
                android:id="@+id/tv_year_of_release"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontmedium"
                android:textColor="@color/gray_1"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_title_song"
                app:layout_constraintStart_toStartOf="@+id/tv_title_song"
                tools:text="2Rex Orange County" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_view_fav"
            android:layout_weight="1"
            android:layout_width="18dp"
            android:layout_height="16dp"
            app:tint="@color/black"
            android:src="@drawable/ic_add_favorite" />

    </LinearLayout>

</LinearLayout>
